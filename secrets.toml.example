# ================================
# SECRETS CONFIGURATION - TEMPLATE
# ================================
# 
# INSTRUCCIONES:
# 1. Copia este archivo como "secrets.toml" (sin .example)
# 2. Rellena con tus API keys reales
# 3. NUNCA subas secrets.toml a Git
# 4. En Streamlit Cloud, añade estos valores en Settings > Secrets
#
# ================================

[api]
# SerpAPI Key (REQUERIDA)
# Obtén tu key en: https://serpapi.com/manage-api-key
serpapi_key = "TU_SERPAPI_KEY_AQUI"

# Optional: Google Trends (no requiere key, usa pytrends)
# trends_enabled = true

# ================================
# DEPLOYMENT CONFIG (Streamlit Cloud)
# ================================
# En Streamlit Cloud, añade en Settings > Secrets:
#
# [api]
# serpapi_key = "tu_key_real_aqui"
#
# ================================
